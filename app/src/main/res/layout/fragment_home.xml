<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeFragment"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@color/colorPrimaryDark"
   >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".6"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    >
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_notifications_black_24dp">

        </ImageView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:textColor="@android:color/white">


    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rajasthan Covid Case"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:textColor="@android:color/white">


    </TextView>

</LinearLayout>
       <LinearLayout

           android:layout_width="fill_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:weightSum="2"

           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:weightSum="2"
                   android:orientation="horizontal">
                       <LinearLayout
                           android:layout_margin="10dp"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:weightSum="2"
                               android:layout_weight="1"
                           android:background="@drawable/gradientdanger">
                              <LinearLayout
                                  android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                      android:layout_weight="1"
                                  android:orientation="vertical"
                                  >
                                      <TextView
                                          android:layout_width="match_parent"
                                          android:layout_height="wrap_content"
                                          android:text="Affected"
                                          android:textStyle="bold"
                                          android:fontFamily="@font/montserrat"
                                          android:layout_marginLeft="10dp"
                                          android:layout_marginTop="5dp"
                                          android:textColor="@color/dangertext"
                                              ></TextView>
                                      <TextView
                                          android:id="@+id/textaffected"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="0.00k"
                                          android:textStyle="bold"
                                          android:textSize="18dp"
                                          android:layout_marginLeft="10dp"
                                          android:textColor="@color/dangertext"
                                          android:fontFamily="@font/montserrat"
                                              ></TextView>
                              </LinearLayout>
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:layout_marginRight="5dp"
                                   android:layout_marginBottom="5dp"
                                   android:layout_marginTop="5dp">
                                   <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
                                       android:id="@+id/affectedgraph"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       app:duration="300"
                                       app:lineThickness="5"
                                       app:paddingPercent="0.01"
                                       app:lineColor="@color/danger"
                                       />
                               </LinearLayout>


                       </LinearLayout>
                       <LinearLayout
                           android:layout_margin="10dp"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:background="@drawable/gradietactive">
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:orientation="vertical">
                                       <TextView
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:text="Active"
                                           android:textStyle="bold"
                                           android:textColor="@color/colorPrimary"
                                           android:fontFamily="@font/montserrat"
                                           android:layout_marginLeft="10dp"
                                           android:layout_marginTop="5dp"
                                           ></TextView>
                                       <TextView
                                           android:textColor="@color/colorPrimary"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="0.00k"
                                           android:textStyle="bold"
                                           android:textSize="18dp"
                                           android:layout_marginLeft="10dp"
                                           android:fontFamily="@font/montserrat"
                                           android:id="@+id/textactive"
                                           ></TextView>
                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:layout_marginRight="5dp"
                                   android:layout_marginBottom="5dp"
                                   android:layout_marginTop="5dp">
                                       <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
                                           android:outlineAmbientShadowColor="@color/danger"
                                           android:id="@+id/activegraph"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           app:duration="300"
                                           app:lineThickness="5"
                                           app:paddingPercent="0.01"
                                           app:lineColor="@color/colorPrimary"
                                           />
                               </LinearLayout>
                       </LinearLayout>


               </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:weightSum="2"
               >
               <LinearLayout
                   android:layout_margin="10dp"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:background="@drawable/gradietactive">
                   <LinearLayout

                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="vertical">
                       <TextView

                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Recover"
                           android:textStyle="bold"
                           android:textColor="@color/colorPrimary"
                           android:fontFamily="@font/montserrat"
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="5dp"
                           ></TextView>
                       <TextView
                           android:id="@+id/recover"
                           android:textColor="@color/colorPrimary"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0.00k"
                           android:textStyle="bold"
                           android:textSize="18dp"
                           android:layout_marginLeft="10dp"
                           android:fontFamily="@font/montserrat"

                           ></TextView>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:layout_marginRight="5dp"
                       android:layout_marginBottom="5dp"
                       android:layout_marginTop="5dp">
                       <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
                           android:outlineAmbientShadowColor="@color/danger"
                           android:id="@+id/recovergraph"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           app:duration="300"
                           app:lineThickness="5"
                           app:paddingPercent="0.01"
                           app:lineColor="@color/colorPrimary"
                           />
                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_margin="10dp"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:background="@drawable/gradietactive">
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:orientation="vertical">
                       <TextView

                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Dead"
                           android:textStyle="bold"
                           android:textColor="@color/colorPrimary"
                           android:fontFamily="@font/montserrat"
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="5dp"
                           ></TextView>
                       <TextView
                           android:id="@+id/dead"
                           android:textColor="@color/colorPrimary"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0.00k"
                           android:textStyle="bold"
                           android:textSize="18dp"
                           android:layout_marginLeft="10dp"
                           android:fontFamily="@font/montserrat"

                           ></TextView>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:layout_marginRight="5dp"
                       android:layout_marginBottom="5dp"
                       android:layout_marginTop="5dp">
                       <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
                           android:outlineAmbientShadowColor="@color/danger"
                           android:id="@+id/deadrgraph"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           app:duration="300"
                           app:lineThickness="5"
                           app:paddingPercent="0.01"
                           app:lineColor="@color/colorPrimary"
                           />
                   </LinearLayout>
               </LinearLayout>

           </LinearLayout>

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
                android:layout_weight="1.2"
            android:orientation="vertical">
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                        <TextView
                            android:id="@+id/top3"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:text="Top 3 Country"
                            android:textStyle="bold"
                            android:fontFamily="@font/montserrat"
                            android:textSize="20sp"></TextView>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:scrollbars="none"
                    >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            >
                          <androidx.cardview.widget.CardView
                              android:layout_width="160dp"
                              android:layout_height="match_parent"
                              app:cardCornerRadius="10dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginBottom="2dp"


                              ><LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:background="@drawable/gradfirstcountry"
                              android:weightSum="2"
                              android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                  <TextView
                                      android:id="@+id/textfcon"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="USA"
                                      android:textColor="@android:color/white"
                                      android:fontFamily="@font/montserrat"
                                      android:layout_gravity="center"
                                      android:layout_marginTop="15dp"
                                      android:textSize="15sp"
                                      android:textStyle="bold"
                                      ></TextView>
                                  <TextView
                                      android:id="@+id/textfconcases"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="200,256"
                                      android:textColor="@android:color/white"
                                      android:fontFamily="@font/montserrat"
                                      android:layout_gravity="center"

                                      android:textSize="20sp"
                                      android:textStyle="bold"
                                      ></TextView>
                                </LinearLayout>
                                  <LinearLayout
                                      android:layout_width="match_parent"
                                      android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:orientation="vertical">
                                          <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
                                              android:id="@+id/graphfirstcountry"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              app:duration="300"
                                              app:lineThickness="5"
                                              app:paddingPercent="0.01"
                                              app:lineColor="@android:color/white"
                                              />

                                  </LinearLayout>



                          </LinearLayout></androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView

                                    android:layout_width="160dp"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="2dp"
                                    ><LinearLayout
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradsecondcountry">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:id="@+id/textscon"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="ITALY"
                                                    android:textColor="@android:color/white"
                                                    android:fontFamily="@font/montserrat"
                                                    android:layout_gravity="center"
                                                    android:layout_marginTop="15dp"
                                                    android:textSize="15sp"
                                                    android:textStyle="bold"
                                                    ></TextView>
                                                <TextView
                                                    android:id="@+id/textsconcases"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="2200,256"
                                                    android:textColor="@android:color/white"
                                                    android:fontFamily="@font/montserrat"
                                                    android:layout_gravity="center"

                                                    android:textSize="20sp"
                                                    android:textStyle="bold"
                                                    ></TextView>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                                <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
                                                    android:id="@+id/graphsecondcountry"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:duration="300"
                                                    app:lineThickness="5"
                                                    app:paddingPercent="0.01"
                                                    app:lineColor="@android:color/white"
                                                    />

                                        </LinearLayout>

                                </LinearLayout></androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:layout_width="160dp"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginBottom="2dp"
                                    ><LinearLayout
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradthirfcountry">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                                <TextView
                                                    android:id="@+id/texttcon"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="China"
                                                    android:textColor="@android:color/white"
                                                    android:fontFamily="@font/montserrat"
                                                    android:layout_gravity="center"
                                                    android:layout_marginTop="15dp"
                                                    android:textSize="15sp"
                                                    android:textStyle="bold"
                                                    ></TextView>
                                                <TextView
                                                    android:id="@+id/texttconcases"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="2020,256"
                                                    android:textColor="@android:color/white"
                                                    android:fontFamily="@font/montserrat"
                                                    android:layout_gravity="center"

                                                    android:textSize="20sp"
                                                    android:textStyle="bold"
                                                    ></TextView>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                                <co.blankkeys.animatedlinegraphview.AnimatedLineGraphView
                                                    android:id="@+id/graphthirdcountry"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    app:duration="300"
                                                    app:lineThickness="5"
                                                    app:paddingPercent="0.01"
                                                    app:lineColor="@android:color/white"
                                                    />

                                        </LinearLayout>
                                </LinearLayout></androidx.cardview.widget.CardView>
                        </LinearLayout>


                </HorizontalScrollView>
                
        </LinearLayout>





</LinearLayout>